<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <com.pnikosis.materialishprogress.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_wheell"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            wheel:matProg_barColor="@color/colorPrimary"
            wheel:matProg_barWidth="2dp"
            wheel:matProg_progressIndeterminate="false"
            wheel:matProg_rimColor="@color/colorPrimary"
            wheel:matProg_rimWidth="2dp"
            wheel:matProg_spinSpeed="0.64" />

        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="上拉加载更多"
            android:textColor="@color/lib_tv_dark" />
    </LinearLayout>
</RelativeLayout>
